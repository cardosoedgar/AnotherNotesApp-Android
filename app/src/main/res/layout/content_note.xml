<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/row_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cardosoedgar.anothernotesapp.NoteActivity"
    tools:showIn="@layout/activity_note">

    <EditText
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/row_padding"
        android:paddingStart="@dimen/row_padding"
        android:paddingEnd="@dimen/row_padding"
        android:paddingRight="@dimen/row_padding"
        android:gravity="top|start"
        android:singleLine="false"
        android:textColor="@color/textColorDark"
        android:textStyle="normal"
        android:textSize="16sp"
        android:hint="@string/hint_content"
        android:inputType="textCapSentences|textMultiLine"
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
